{
  "name": "pty_test",
  "version": "0.1.0",
  "description": "PTY process/session manager (node-pty) with output capture and session control.",
  "type": "module",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist/",
    "types/"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "npm run build && node --test",
    "example:stream": "npm run build && node examples/streaming-output.js",
    "example:vim": "npm run build && node examples/vim-quit.js",
    "example:log": "npm run build && node examples/log-offset.js",
    "example:codex-game": "npm run build && node examples/codex-html-game.js",
    "example:process-like": "npm run build && node examples/process-like-codex.js"
  },
  "dependencies": {
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "typescript": "^5.7.0"
  }
}
